<div class="navbar-wrapper">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h1>My Foods</h1>
      <%= link_to new_food_path do%>
        <div class="btn btn-primary">Add new food</div>
      <% end %>
    </div>
    <% @foods.each do |food| %>
      <% if policy(food).edit? %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to food.name, food_path(food) %></h5>
            <small><%= food.user.email %></small>
            <p><%= food.calories %> calories</p>
            <p><%= food.portion_size %></p>
            <p class="card-text"><%= food.notes %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
